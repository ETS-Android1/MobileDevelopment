<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <CheckBoxPreference
        android:defaultValue="@bool/pref_first_check_box_default"
        android:key="@string/pref_first_check_box"
        android:summaryOff="Hidden"
        android:summaryOn="Shown"
        android:title="Show Something" />

    <EditTextPreference
        android:defaultValue="@string/pref_int_default"
        android:key="@string/pref_int_key"
        android:title="@string/pref_int_label" />

    <ListPreference
        android:defaultValue="@string/pref_color_red_value"
        android:entries="@array/pref_color_option_labels"
        android:entryValues="@array/pref_color_option_values"
        android:key="@string/pref_color_key"
        android:title="@string/pref_color_label" />

</PreferenceScreen>